{
    "name": "maxemail/api-php",
    "description": "Maxemail API Client",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Maxemail Team & Contributors",
            "homepage": "https://github.com/maxemail/api-php/contributors"
        }
    ],

    "autoload": {
        "psr-4": {
            "Maxemail\\Api\\": "src/"
        }
    },

    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-zip": "*",

        "psr/log": "^2 || ^3",
        "guzzlehttp/guzzle": "^6 || ^7"
    },

    "suggest": {
        "psr/log-implementation": "A logger can be used to provide debug information"
    },

    "autoload-dev": {
        "psr-4": {
            "Maxemail\\Api\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit" : "^7|^8|^9",
        "php-mock/php-mock-phpunit": "^2.0",
        "symplify/easy-coding-standard": "^12.1"
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
